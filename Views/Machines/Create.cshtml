@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Add a new machine</h4>
@using (Html.BeginForm())
{
    @Html.Label("Machine Name")
    @Html.TextBoxFor(model => model.MachineName, new { @class = "form-control", required = "required" })

    <br>
    <br>
    @Html.Label("Qualified Engineer")
    @Html.DropDownList("EngineerId", ViewBag.EngineerId as SelectList, "-- Select Engineer --", new { @class = "form-control" })

    <br>
    <br>
    <input type="submit" value="Complete" class="btn btn-default" required="true" />
}
