@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

<hr />

@if (@Model.Count == 0)
{
  <h3>no engineers have been hired yet</h3>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId })</li>
  }
</ul>

<ul class="menu-links">
  <li>@Html.ActionLink("add a new engineer", "Create")</li>
  <li>@Html.ActionLink("back to home", "Index", "Home")</li>
</ul>