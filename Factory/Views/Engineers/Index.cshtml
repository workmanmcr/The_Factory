@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>
<hr />

<h2> Here is a list of all the engineers</h2>

@if (@Model.Count == 0)
{
    <h4> "There are no engineers added to the factory database"</h4>
}

@foreach (Engineer engineer in Model)
{
    <h4> @Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId}) </h4>
}

<hr />
<p>@Html.ActionLink("Add new engineer", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>