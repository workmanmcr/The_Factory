@{
  Layout = "_Layout";
}

@using Factory.Models

<h1 class="title">The Factory</h1>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Engineers</h3>
      @if (@ViewBag.EmployeeDirectory.Count == 0)
      {
        <h4>we have not hired any Engineers members yet</h4>
      }
      @foreach(Engineer engineer in @ViewBag.EmployeeDirectory)
      {
        <li>@engineer.Name</li>
      }
    </div>
    <div class="col-md-6">
      <h3>Machines</h3>
      @if (@ViewBag.MachineInventory.Count == 0)
      {
        <h4>we have no functioning machines currently</h4>
      }
      @foreach(Machine machine in @ViewBag.MachineInventory)
      {
        <li>@machine.MachineName</li>
      }
    </div>
  </div>
</div>

<ul class="menu-links">
  <li>@Html.ActionLink("see employee directory", "Index", "Engineers")</li>
  <li>@Html.ActionLink("see machine inventory", "Index", "Machines")</li>
</ul>