@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>Machines</h1>
<hr />

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Description}", "Details", new { id = machine.MachineId }) | @machine.Engineer.Name</li>
    }
  </ul>
}


<hr />
<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>