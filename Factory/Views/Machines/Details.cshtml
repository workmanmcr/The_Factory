@{
  Layout ="_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.MachineNumber): @Html.DisplayFor(model => model.MachineNumber)</h3>

@if(@Model.JoinEntities.Count == 0)
{
    <p>No engineers are currently assigned to this machine.</p>
}
else
{
    <h4>Engineers assigned to this machine:</h4>
    <ul>
    @foreach(EngineerMachine join in Model.JoinEntities)
    {
        <li>@join.Student.Name</li>
        @using (Html.BeginForm("DeleteJoin", "Machines"))
        {
            @Html.Hidden("joinId", @join.EngineerMachineID)
            <input type="submit" value= "Remove Engineer" />
        }
    }
    </ul>
}

<hr />

<p>@Html.ActionLink("Back to Machines", "Index") </p>
<p>@Html.ActionLink("Add an Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>