@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a machine</h2>
<h4>Add a machine to this engineer: @Html.DisplayFor(model => model.Name, new { @class = "form-control", placeholder="Required", required="required", style="width: 300px;"})</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.Label("Add machine")
  @Html.DropDownList("MachineId")
  <input type="submit" value="Save" />
}
<br>
<br>
<p>@Html.ActionLink("⚙️ Back to engineer", "Index")</p>
<p>@Html.ActionLink("⚙️ Add a machine", "AddMachine", new { id = Model.EngineerId })</p>